<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Uvatar Academy</title>
  </head>
  <body>
    <h2>Yukdemy</h2>
    <form method="get" class="d-flex flex-row">
      <input type="text" name="search" style="width: 150px" />
      <button class="mx-3">Search</button>
    </form>

    <table border="1">
      <thead>
        <th>User Name</th>
        <th>Email</th>
        <th>Password</th>
        <th>Role</th>
        <th>Action</th>
      </thead>
      <tbody>
        <% result.forEach(el=>{ %>
        <tr>
          <td><%= el.userName %></td>
          <td><%= el.email %></td>
          <td><%= el.password %></td>
          <td><%= el.role %></td>
          <td>
            <a href="/user/<%= el.id%>/delete"
              ><button class="btn btn-outline-danger btn-sm">
                Delete
              </button></a
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
